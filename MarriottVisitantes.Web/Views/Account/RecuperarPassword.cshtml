@model PasswordRecuperacionViewModel
@{
    ViewData["Title"] = "Marriott Costa Rica - Reestablecer contraseña";
    Layout = "_AccountLayout";    
}
<!-- Auth header with logo image-->
<div class="text-center">
    <img class="mb-3" src="~/assets/marriott-logo.png" alt="..." style="height: 48px" />
    <h1 class="display-5 mb-0">Restablecer contraseña</h1>
    <div class="subheading-1 mb-5"></div>
</div>
<form asp-controller="Account" asp-action="RecuperarPassword" class="mb-5" >
    <input type="hidden" asp-for="Id">
    <input type="hidden" asp-for="Token">
    <div class="form-floating input-group-lg mb-3">
        <input id="Password" asp-for="Password" type="password" class="form-control" placeholder="Contraseña">
        <label for="Password" asp-for="Password" class="form-label">Contraseña nueva</label>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-floating input-group-lg mb-3">
        <input id="PasswordConfirm" asp-for="PasswordConfirm" type="password" class="form-control" placeholder="Contraseña">
        <label for="PasswordConfirm" asp-for="PasswordConfirm" class="form-label">Confirmar contraseña</label>
        <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
    </div>
    <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
        <button type="submit" class="btn btn-primary">Enviar</button>
    </div>
</form>

